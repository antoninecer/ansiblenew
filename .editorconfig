# top-most EditorConfig file
root = true

# Don't use tabs for indentation.
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4


# YAML config files
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# JSON files
[*.json]
max_line_length = null

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf
